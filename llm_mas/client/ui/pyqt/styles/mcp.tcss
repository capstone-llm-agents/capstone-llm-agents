/* Main container for MCP client information */
.mcp-client-info {
    padding: 2;
    margin: 1;
    background: $surface;
    border: solid $primary;
    border-title-align: center;
    border-title-color: $accent;
    border-title-background: $surface;
    min-height: 10;
}

/* Container for add server section */
.mcp-add-server {
    height: auto;
    margin: 1 0;
    padding: 1 2;
    background: $surface-lighten-1;
    border: solid $secondary;
}

/* Server input field styling */
#server_input {
    width: 80%;
    margin-right: 1;
    background: $surface;
    color: $text;
    border: solid $accent;
}

#server_input:focus {
    border: solid $primary;
    background: $surface-lighten-1;
}

/* Add server button styling */
#add_server_button {
    min-width: 15;
    background: $primary;
    color: $text-primary;
    border: none;
}

#add_server_button:hover {
    background: $primary-lighten-1;
    color: $text-primary;
}

#add_server_button:focus {
    background: $primary-darken-1;
    border: solid $accent;
}

/* Error display widget styling */
.error-display {
    height: auto;
    min-height: 0;
    margin: 0 1;
    padding: 0 2;
    color: $error;
    background: transparent;
    text-style: italic;
    opacity: 0;
    max-height: 0;
    overflow: hidden;
    transition: all 200ms;
}

.error-display.visible {
    opacity: 1;
    max-height: 3;
    padding: 1 2;
    margin: 1 1;
}

/* Server information content styling */
.mcp-client-info > Static {
    padding: 1;
    color: $text;
    background: transparent;
}

/* Remove the input error state styling since we're not using it anymore */
/* #server_input.-error { ... } - REMOVED */

/* Loading state styling */
.mcp-client-info.-loading {
    text-style: italic;
    color: $text-muted;
}

/* Server details styling within the info widget */
.mcp-client-info .server-detail {
    margin: 1 0;
    padding: 1;
    background: $surface-lighten-1;
    border-left: solid $accent;
}

/* Connected server count styling */
.mcp-client-info .server-count {
    text-style: bold;
    color: $success;
    margin-bottom: 1;
}

/* Error message styling within server info */
.mcp-client-info .error-message {
    color: $error;
    text-style: italic;
    margin: 1 0;
}

/* Success message styling */
.mcp-client-info .success-message {
    color: $success;
    text-style: bold;
    margin: 1 0;
}

/* Focus ring for accessibility */
.mcp-add-server *:focus {
    outline: solid $accent;
}